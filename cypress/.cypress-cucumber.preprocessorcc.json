{
    "json": {
      "enabled": false,
      "output": "jsonlogs/log.json",
      "formatter": "cucumber-json-formatter.exe"
    },

    "messages": {
      "enabled": false,
      "output": "jsonlogs/messages.ndjson"
    },

    "html": {
      "enabled": false
    },

    "stepDefinitions": [

        "[filepath]/**/*.{js,ts}",
        "[filepath].{js,ts}",
        "cypress/support/step_definitions/*.{js,ts}",
        "[filepath]\\***.{js,ts}",
        "[filepath].{js,ts}",
        "cypress\\support\\step_definitions\\*.{js,ts}"

    ]

}